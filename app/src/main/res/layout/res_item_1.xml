<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/res_item_1"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="10dp"

            app:cardBackgroundColor="#C6D9F8"
            app:cardCornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="@font/krona_one"
                android:text="Popular Roadmaps"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="normal" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="70dp"
                android:layout_alignParentTop="true"
                android:fillViewport="true"
                android:measureAllChildren="false"
                android:scrollbars="none"
                android:isScrollContainer="true"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/androiddev_iv"
                        android:layout_width="290dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/resources_iv_back"
                        app:srcCompat="@drawable/androiddev"
                        android:scaleType="fitXY"/>
                    <ImageView
                        android:id="@+id/angular_iv"
                        android:layout_width="290dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/resources_iv_back"
                        app:srcCompat="@drawable/angular"
                        android:scaleType="fitXY"/>
                    <ImageView
                        android:id="@+id/backend_iv"
                        android:layout_width="290dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/resources_iv_back"
                        app:srcCompat="@drawable/backend"
                        android:scaleType="fitXY"/>
                    <ImageView
                        android:id="@+id/cn_iv"
                        android:layout_width="290dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/resources_iv_back"
                        app:srcCompat="@drawable/cn"
                        android:scaleType="fitXY"/>
                    <ImageView
                        android:id="@+id/cp_iv"
                        android:layout_width="290dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/resources_iv_back"
                        app:srcCompat="@drawable/cp"
                        android:scaleType="fitXY"/>
                    <ImageView
                        android:id="@+id/dbms_iv"
                        android:layout_width="290dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/resources_iv_back"
                        app:srcCompat="@drawable/dbms"
                        android:scaleType="fitXY"/>
                    <ImageView
                        android:id="@+id/devops_iv"
                        android:layout_width="290dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/resources_iv_back"
                        app:srcCompat="@drawable/devops"
                        android:scaleType="fitXY"/>
                    <ImageView
                        android:id="@+id/frontend_iv"
                        android:layout_width="290dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/resources_iv_back"
                        app:srcCompat="@drawable/frontend"
                        android:scaleType="fitXY"/>
                    <ImageView
                        android:id="@+id/java_iv"
                        android:layout_width="290dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/resources_iv_back"
                        app:srcCompat="@drawable/java"
                        android:scaleType="fitXY"/>
                    <ImageView
                        android:id="@+id/ml_iv"
                        android:layout_width="290dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/resources_iv_back"
                        app:srcCompat="@drawable/machinelearning"
                        android:scaleType="fitXY"/>
                    <ImageView
                        android:id="@+id/oops_iv"
                        android:layout_width="290dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/resources_iv_back"
                        app:srcCompat="@drawable/oops"
                        android:scaleType="fitXY"/>
                    <ImageView
                        android:id="@+id/os_iv"
                        android:layout_width="290dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/resources_iv_back"
                        app:srcCompat="@drawable/operatingsystems"
                        android:scaleType="fitXY"/>
                    <ImageView
                        android:id="@+id/python_iv"
                        android:layout_width="290dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/resources_iv_back"
                        app:srcCompat="@drawable/python"
                        android:scaleType="fitXY"/>
                    <ImageView
                        android:id="@+id/react_iv"
                        android:layout_width="290dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/resources_iv_back"
                        app:srcCompat="@drawable/react"
                        android:scaleType="fitXY"/>
                    <ImageView
                        android:id="@+id/placements_iv"
                        android:layout_width="290dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/resources_iv_back"
                        app:srcCompat="@drawable/placements"
                        android:scaleType="fitXY"/>



                </LinearLayout>
            </HorizontalScrollView>


        </com.google.android.material.card.MaterialCardView>




    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
